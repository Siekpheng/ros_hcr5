<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="hcr5_gripper" params="parent prefix">

    <joint name="${prefix}gripper_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}gripper_base_link"/>
      <origin xyz="-0.058 0 0" rpy="0 -1.57 0"/>
    </joint>

    <link name="${prefix}gripper_base_link">
      <visual>
        <geometry><box size="0.04 0.08 0.03"/></geometry>
        <material name="grey"><color rgba="0.2 0.2 0.2 1"/></material>
      </visual>
      <collision>
        <geometry><box size="0.04 0.08 0.03"/></geometry>
      </collision>
    </link>

    <link name="${prefix}left_finger">
      <visual>
        <geometry><box size="0.03 0.01 0.06"/></geometry>
        <material name="silver"><color rgba="0.8 0.8 0.8 1"/></material>
      </visual>
      <collision>
        <geometry><box size="0.03 0.01 0.06"/></geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}left_finger_joint" type="prismatic">
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}left_finger"/>
      <origin xyz="0 0.025 0.04" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.03" upper="0.0" effort="50" velocity="0.5"/>
    </joint>

    <link name="${prefix}right_finger">
      <visual>
        <geometry><box size="0.03 0.01 0.06"/></geometry>
        <material name="silver"/>
      </visual>
      <collision>
        <geometry><box size="0.03 0.01 0.06"/></geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <joint name="${prefix}right_finger_joint" type="prismatic">
      <parent link="${prefix}gripper_base_link"/>
      <child link="${prefix}right_finger"/>
      <origin xyz="0 -0.025 0.04" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="0.03" effort="50" velocity="0.5"/>
      <mimic joint="${prefix}left_finger_joint" multiplier="-1.0" offset="0.0"/>
    </joint>

    <gazebo reference="${prefix}left_finger">
      <mu1>1000.0</mu1><mu2>1000.0</mu2>
      <kp>1000000.0</kp><kd>1.0</kd>
    </gazebo>
    <gazebo reference="${prefix}right_finger">
      <mu1>1000.0</mu1><mu2>1000.0</mu2>
      <kp>1000000.0</kp><kd>1.0</kd>
    </gazebo>

    <ros2_control name="GripperControl" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>
      <joint name="${prefix}left_finger_joint">
        <command_interface name="position" />
        <state_interface name="position" />
        <state_interface name="velocity" />
      </joint>
    </ros2_control>

    <gazebo>
      <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
        <parameters>$(find hcr5_moveit_config)/config/ros2_controllers.yaml</parameters>
      </plugin>
    </gazebo>

  </xacro:macro>
</robot>